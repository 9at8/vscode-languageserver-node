{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"incremental": true,
		"composite": true,
		"sourceMap": true,
		"declaration": true,
		"stripInternal": true,
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": [ "es2020" ],
		"rootDir": "./src",
		"outDir": "./lib",
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*.ts"
	]
}